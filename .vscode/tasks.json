{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Laravel: Serve",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "command": "php",
      "args": ["artisan", "serve"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Vite: Dev",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Composer: Dev",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "command": "php",
      "args": ["bin/composer.phar", "run", "dev"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: Start All",
      "dependsOn": ["Laravel: Serve", "Vite: Dev"],
      "dependsOrder": "parallel"
    }
  ]
}
